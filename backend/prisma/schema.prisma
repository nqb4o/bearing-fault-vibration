// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("USER") // USER or ADMIN
  createdAt DateTime @default(now())
}

model DiagnosticHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  filename  String
  result    String
  confidence Float
  timestamp DateTime @default(now())
}

model Dataset {
  id        Int      @id @default(autoincrement())
  name      String
  path      String
  uploadedAt DateTime @default(now())
  size      Int      // in bytes
  rowCount  Int
  columns   String   // JSON string of column names
  status    String   // "uploaded", "processing", "ready", "error"
  models    TrainedModel[]
}

model TrainedModel {
  id        Int      @id @default(autoincrement())
  name      String
  version   String
  path      String
  accuracy  Float
  createdAt DateTime @default(now())
  datasetId Int?
  dataset   Dataset? @relation(fields: [datasetId], references: [id])
}
